# ============================================================================
# SEQUENCE 3: WALLPAPER INITIALIZATION
# ============================================================================
sequence3: Wallpaper Initialization {
  shape: rectangle
  style.fill: "#e1f5fe"
  style.stroke: "#0277bd"
  style.stroke-width: 3

  s3_title: {
    shape: text
    label: "ğŸš€ SEQUENCE 3: Wallpaper Initialization"
    style.font-size: 18
    style.bold: true
  }

  s3_user: User {
    shape: person
    style.fill: "#b3e5fc"
  }

  s3_hidamari: Hidamari / Browser {
    shape: rectangle
    style.fill: "#81d4fa"
  }

  s3_html: background.html {
    shape: page
    style.fill: "#ffffff"
    style.stroke: "#0277bd"
  }

  s3_template: template.js {
    shape: stored_data
    style.fill: "#4fc3f7"
  }

  s3_config: config.json {
    shape: cylinder
    style.fill: "#ffeb3b"
    style.stroke: "#f57f17"
  }

  s3_theme: Theme Files {
    shape: rectangle
    style.fill: "#29b6f6"
  }

  s3_bgmgr: background-manager.js {
    shape: stored_data
    style.fill: "#03a9f4"
  }

  s3_canvas: Canvas 2D {
    shape: rectangle
    style.fill: "#039be5"
  }

  # Init flow
  s3_user -> s3_hidamari: 1. Sets wallpaper {
    style.stroke: "#0277bd"
    style.stroke-width: 2
  }

  s3_hidamari -> s3_html: 2. Loads HTML {
    style.stroke: "#0288d1"
    style.stroke-width: 2
  }

  s3_html -> s3_template: 3. Executes template.js {
    style.stroke: "#0288d1"
    style.stroke-width: 2
  }

  s3_template -> s3_config: 4. Fetches config.json\n(which theme to load) {
    style.stroke: "#f57f17"
    style.stroke-width: 2
  }

  s3_config -> s3_template: 5. Returns active theme name {
    style.stroke: "#f57f17"
    style.stroke-width: 2
  }

  s3_template -> s3_theme: 6. Loads theme.json\n(colors, settings) {
    style.stroke: "#0288d1"
    style.stroke-width: 2
  }

  s3_template -> s3_bgmgr: 7. Calls background-manager\nto start animation {
    style.stroke: "#039be5"
    style.stroke-width: 2
  }

  s3_bgmgr -> s3_theme: 8. Dynamically loads\ntheme/*/background.js {
    style.stroke: "#039be5"
    style.stroke-width: 2
  }

  s3_bgmgr -> s3_canvas: 9. Initializes Canvas 2D\nStarts animation loop {
    style.stroke: "#0277bd"
    style.stroke-width: 3
    style.animated: true
  }

  s3_template -> s3_user: 10. Wallpaper ready! {
    style.stroke: "#0277bd"
    style.stroke-width: 2
  }
}

# ============================================================================
# SEQUENCE 4: API POLLING (EVERY 5 SECONDS)
# ============================================================================
sequence4: API Polling Loop {
  shape: rectangle
  style.fill: "#fff3e0"
  style.stroke: "#e65100"
  style.stroke-width: 3

  s4_title: {
    shape: text
    label: "ğŸ”„ SEQUENCE 4: API Polling (every 5s)"
    style.font-size: 18
    style.bold: true
  }

  s4_template: template.js {
    shape: stored_data
    style.fill: "#ffe0b2"
  }

  s4_flask: Flask API {
    shape: stored_data
    style.fill: "#ffcc80"
  }

  s4_psutil: psutil library {
    shape: package
    style.fill: "#ffb74d"
  }

  s4_kernel: Linux Kernel {
    shape: hexagon
    style.fill: "#ffa726"
  }

  s4_panels: UI Panels {
    shape: rectangle
    style.fill: "#ff9800"
  }

  # Polling flow
  s4_template -> s4_flask: 1. HTTP GET /api/stats {
    style.stroke: "#e65100"
    style.stroke-width: 3
    style.animated: true
    label: "Every 5 seconds"
  }

  s4_flask -> s4_psutil: 2. Query all metrics:\ncpu_percent()\nvirtual_memory()\ndisk_usage()\nnet_io_counters() {
    style.stroke: "#f57c00"
    style.stroke-width: 2
  }

  s4_psutil -> s4_kernel: 3. System calls\n/proc/* filesystem {
    style.stroke: "#ef6c00"
    style.stroke-width: 2
  }

  s4_kernel -> s4_psutil: 4. Hardware state {
    style.stroke: "#ef6c00"
    style.stroke-width: 2
  }

  s4_psutil -> s4_flask: 5. Returns metrics {
    style.stroke: "#f57c00"
    style.stroke-width: 2
  }

  s4_flask -> s4_template: 6. JSON response\nwith all metrics {
    style.stroke: "#e65100"
    style.stroke-width: 3
    style.animated: true
  }

  s4_template -> s4_panels: 7. Updates UI panels\n(CPU, RAM, Disk, Network) {
    style.stroke: "#ff6f00"
    style.stroke-width: 2
  }

  s4_panels -> s4_template: 8. Wait 5 seconds...\nRepeat! {
    style.stroke: "#e65100"
    style.stroke-width: 2
    style.stroke-dash: 5
    style.animated: true
  }
}

